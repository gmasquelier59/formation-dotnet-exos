@model List<ContactModel>

@{
    ViewData["Title"] = "Liste des contacts";
}

<h1>@ViewData["Title"]</h1>

<div class="d-flex gap-2 justify-content-end py-2">
    <a asp-action="Add" class="btn btn-primary">Nouveau contact</a>
</div>

<div class="table-responsive small">
    @if (Model.Count == 0)
    {
        <div class="alert alert-warning" role="alert">
            Aucun contact pour le moment
        </div>
    }
    else
    {
        <table class="table table-striped table-sm table-hover align-middle">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Email</th>
                    <th scope="col">Telephone</th>
                    <th scope="col">Résumé</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ContactModel contact in Model)
                {
                    <tr>
                        <td>
                            <img src="@contact.Photo" class="img-thumbnail" style="width: 64px" />
                            @Html.ActionLink($"{contact.Lastname} {contact.Firstname}", "Details", new { id = contact.Id })
                         </td>
                        <td>@contact.Email</td>
                        <td>@contact.Phone</td>
                        <td>@contact.Resume</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>