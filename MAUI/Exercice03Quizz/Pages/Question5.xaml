<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exercice03Quizz.Pages.Question5"
             Title="Question n°5">
    <VerticalStackLayout Spacing="30" Margin="50">
        <Label 
            Text="Quel était le nom de l’attraction de Disneyland Paris présentant un film en 3D réalisé par Francis Ford Coppola avec Michael Jackson ?"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="20" />
        <Grid RowDefinitions="*,*" ColumnDefinitions="*,*" ColumnSpacing="10" RowSpacing="10">
            <Button Text="Laser Blast" x:Name="Answer1" Grid.Column="0" Grid.Row="0" Clicked="AnswerClicked" />
            <Button Text="Captain Eo" x:Name="Answer2" Grid.Column="1" Grid.Row="0" Clicked="AnswerClicked" />
            <Button Text="Tomorrowland" x:Name="Answer3" Grid.Column="0" Grid.Row="1" Clicked="AnswerClicked" />
            <Button Text="Starhsip 3D" x:Name="Answer4" Grid.Column="1" Grid.Row="1" Clicked="AnswerClicked" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>