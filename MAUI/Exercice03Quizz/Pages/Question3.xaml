<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exercice03Quizz.Pages.Question3"
             Title="Question n°3">
    <VerticalStackLayout Spacing="30" Margin="50">
        <Label 
            Text="Que peut-on voir sous le château de la Belle au bois dormant à Disneyland Paris ?"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="20" />
        <Grid RowDefinitions="*,*" ColumnDefinitions="*,*" ColumnSpacing="10" RowSpacing="10">
            <Button Text="La maison de Blanche-Neige et les 7 Nains" x:Name="Answer1" Grid.Column="0" Grid.Row="0" Clicked="AnswerClicked" />
            <Button Text="Un dragon géant" x:Name="Answer2" Grid.Column="1" Grid.Row="0" Clicked="AnswerClicked" />
            <Button Text="Une porte vers le monde d'Alice au Pays des Merveilles" x:Name="Answer3" Grid.Column="0" Grid.Row="1" Clicked="AnswerClicked" />
            <Button Text="Le village de Winnie l'Ourson" x:Name="Answer4" Grid.Column="1" Grid.Row="1" Clicked="AnswerClicked" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>